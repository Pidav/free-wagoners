<div class="container">
  <div class="row">
    <div class="col">
      <h1>Mes missions</h1>
      <h2>Bienvenue sur ton espace recruteur : <%= current_user.email %></h2>
      <hr>
       <div class="card-category" style="background-image: url(https://images.unsplash.com/photo-1450101499163-c8848c66ca85?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60)">
        Espace recruteur
      </div>
      <br>
       <div class="row my-4">
        <div class="col-lg-10 col-offset-1 coder-missions-box">
          <h3 class="m-4">Mes missions :</h3>
          <ul class= "missions-list">
            <% sorted_missions = current_user.missions.order(start_date: :desc) %>
            <% sorted_missions.each do |mission| %>
              <li>
                <div class="mission-card">
                  <div class="mission-top d-flex justify-content-between align-items-center">
                    <h4><%= mission.title %></h4>
                    <span><%= mission.start_date %> au <%= mission.end_date %></span>
                  </div>
                  <hr class="m-1">
                  <div class="mission-long-desc">
                    <p><%= mission.description %></p>
                  </div>
                  <hr class="m-1">
                  <div class="missions-confidentials-infos">
                    <span><%= mission.total_price %> €</span>
                    <span><%= mission.validated_mission %> €</span>
                    <span>given by <%= mission.user.first_name %> <%= mission.user.last_name %>
                      from <%= mission.user.company_name %>
                    </span>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="row my-4">
