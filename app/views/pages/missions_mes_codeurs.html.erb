<div class="back-bar">
  <%= link_to " << Revenir au dashboard", _back_url, class: "btn btn-outline-danger rounded-pill" %>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <hr>
      <h2>Bienvenue sur ton espace codeur : <%= current_user.email %></h2>
      <hr>
       <div class="card-category" style="background-image: url(https://images.unsplash.com/photo-1550439062-609e1531270e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60)">
        Espace codeur
      </div>
      <br>
      <div class="mission-espace">
         <div class="row my-4">
          <div class="col-lg-10 col-offset-1 coder-missions-box">
            <% current_user.coders.each do |coder| %>
            <h4 class="m-4">Les missions de
              <%= link_to coder_path(coder) do %>
              <%= coder.name %>
              <% end %>
               :
            </h4>
              <ul class= "missions-list">
                <% coder.missions.each do |mission| %>
                  <li>
                    <%= render partial: 'missions/mission_card', locals: {mission: mission} %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
