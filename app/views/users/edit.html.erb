<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <br>
      <h2>Editer mon profil</h2>

      <%= simple_form_for [@user] do |f| %>
      <div class="form-row mt-4">
        <div class="col-6 form-group">
            <%= f.input :first_name, label: 'Prénom' %>
        </div>
        <div class="col-6 form-group">
            <%= f.input :last_name, label: 'Nom de famille' %>
        </div>
      </div>
        <%= f.input :company_name, label: 'Nom de la société' %>
        <%= f.input :photo, as: :file, :label => false %>
        <div class="row justify-content-center">
        <%= f.button :submit, 'Mettre à jour',class: "btn btn-primary rounded-pill" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
