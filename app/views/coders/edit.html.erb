<br>
<div class="back-bar">
  <%= link_to " << Revenir au dashboard", _back_url, class: "btn btn-outline-danger rounded-pill" %>
</div>
<hr>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2>Edition de votre profil de Codeur</h2>
      <%= simple_form_for [@coder] do |f| %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :phone_number %>
        <%= f.input :description %>
        <%= f.input :tag_list, as: :check_boxes, collection: Coder::CODE_LIST %>
        <%= f.input :price_per_day %>
        <%= f.input :photo, as: :file, label:"Votre photo" %>
        <%= f.button :submit, class: "btn btn-primary rounded-pill" %>
      <% end %>
    </div>
  </div>
</div>
