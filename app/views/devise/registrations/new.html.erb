<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2>Encore un petit effort et vous y êtes...</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-row mt-4">
        <div class="col-6 form-group">
            <%= f.input :first_name, :placeholder => 'George', label: 'Prénom' %>
        </div>
        <div class="col-6 form-group">
            <%= f.input :last_name, label: 'Nom de famille', :placeholder => 'george@freewagoner.com' %>
        </div>
      </div>
          <%= f.input :phone_number, label: 'Numéro de téléphone'%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: 'Adresse email'%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label: 'Mot de passe' %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label:'Confirmation du mot de passe' %>
          <div class="row justify-content-center">
            <%= f.button :submit, "Créer votre compte", class: "btn btn-primary rounded-pill btn-lg" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
